# .yamllint
---
extends: default

rules:
  # Keep your preference
  line-length:
    max: 120
    level: warning

  # Match the expectations reported by ansible-lint
  comments:
    min-spaces-from-content: 1
  comments-indentation: disable

  braces:
    max-spaces-inside: 1

  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

ignore: |
  .github/workflows/stale.yml
  .venv
